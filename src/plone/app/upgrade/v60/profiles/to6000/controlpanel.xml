<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        meta_type="Plone Control Panel Tool"
        name="portal_controlpanel"
        i18n:domain="plone"
>

  <!-- remove -->
  <configlet action_id="UsersGroups2"
             appId="UsersGroups"
             category="plone-users"
             remove="true"
  >
    <permission>Plone Site Setup: Users and Groups</permission>
  </configlet>

  <!-- add -->
  <configlet action_id="UsersGroups"
             appId="UsersGroups"
             category="plone-users"
             condition_expr=""
             icon_expr="string:person"
             title="Users"
             url_expr="string:${portal_url}/@@usergroup-userprefs"
             visible="True"
             i18n:attributes="title"
  >
    <permission>Plone Site Setup: Users and Groups</permission>
  </configlet>
  <configlet action_id="UsersGroups2"
             appId="UsersGroups2"
             category="plone-users"
             condition_expr=""
             icon_expr="string:people"
             title="Groups"
             url_expr="string:${portal_url}/@@usergroup-groupprefs"
             visible="True"
             i18n:attributes="title"
  >
    <permission>Plone Site Setup: Users and Groups</permission>
  </configlet>
  <configlet action_id="UsersGroupsSettings"
             appId="UsersGroupsSettings"
             category="plone-users"
             condition_expr=""
             icon_expr="string:toggles"
             title="User and Group Settings"
             url_expr="string:${portal_url}/@@usergroup-controlpanel"
             visible="True"
             i18n:attributes="title"
  >
    <permission>Plone Site Setup: Users and Groups</permission>
  </configlet>
  <configlet action_id="MemberFields"
             appId="MemberFields"
             category="plone-users"
             condition_expr=""
             icon_expr="string:card-list"
             title="Member Fields"
             url_expr="string:${portal_url}/@@member-fields"
             visible="True"
             i18n:attributes="title"
  >
    <permission>Plone Site Setup: Users and Groups</permission>
  </configlet>
  <configlet action_id="inspectrelations"
             appId="Relations"
             category="plone-content"
             condition_expr=""
             icon_expr="string:share-fill"
             title="Relations"
             url_expr="string:${portal_url}/@@inspect-relations"
             visible="True"
             i18n:attributes="title"
  >
    <permission>Inspect Relations</permission>
  </configlet>
</object>
