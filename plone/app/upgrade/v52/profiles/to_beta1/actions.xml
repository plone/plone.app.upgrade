<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        meta_type="Plone Actions Tool"
        name="portal_actions"
        i18n:domain="RedirectionTool"
>
  <object meta_type="CMF Action Category"
          name="object"
  >
    <!-- Remove old Products.RedirectionTool tab -->
    <object name="redirection"
            remove="true"
    />
  </object>
  <object meta_type="CMF Action Category"
          name="object_buttons"
  >
    <object meta_type="CMF Action"
            name="redirection"
            i18n:domain="plone"
    >
      <property name="title"
                i18n:translate=""
      >URL Management</property>
      <property name="description"
                i18n:translate=""
      />
      <property name="url_expr">string: ${object_url}/@@manage-aliases</property>
      <property name="icon_expr" />
      <property name="available_expr">python:not globals_view.isPortalOrPortalDefaultPage()</property>
      <property name="permissions">
        <element value="Manage Context Aliases" />
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>
